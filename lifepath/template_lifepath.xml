		<script>
			function clearSelection(source)
				for _, window in ipairs(self.talent_list.getWindows()) do
					window.setFrame(nil);
				end
				self.selectedNode=source
			end
		</script>
		<sheetdata>

			<windowlist name="talent_list">
				<anchored position="insidetopright" relation="relative">
					<top offset="25" />
