    <template name="char_ref_list">
        <list_text name="list">
            <skipempty/>
          <datasource />
            <newfocus>name</newfocus>
              <sortby>
                <control>name</control>
              </sortby>
            <anchored >
                <left  offset="35"/>
                <right  offset="-35"/>
                <top offset="25" />
                <bottom  offset="-25"/>
            </anchored>
            <frame name="lcars_frame_shape" offset="35,25,35,25"/>
            <class>ref_note_item</class>
            <allowdelete  />
          <child merge="delete"/>
          <child merge="delete"/>
          <script>
              function onInit()
                registerMenuItem("Add Item", "categorystyle", 6)
              end
              function onMenuSelection(selectNum)
                if selectNum == 6 then
                    createWindow();
                end
              end
            function onDrop(x,y,draginfo)
              if draginfo.isType("shortcut") then
                local class, datasource = draginfo.getShortcutData();
                if class == "referencetext" or class == "note" or class == "item"
                    or class == "weapon" or class == "referencemanualpage" then
                  local entry = createWindow()
                    DB.copyNode(draginfo.getDatabaseNode(), entry.getDatabaseNode())
                end
              end
              return true;
            end
          </script>
        </list_text>
    </template>
